<div class="game-board-container <%= @image %>">
  <div id="game-board" class="game-board" data-tiles="<%= @game.tiles %>" data-shuffle-url="<%= temporary_shuffle_games_path(layout_id: @game.layout_id) %>" data-new-game-url="<%= temporary_new_games_path(layout_id: @game.layout_id) %>">
    <%= render partial: 'games/game_board', locals: {game: @game} %>
  </div>
</div>
<div class="game-controls">
  <div id="game-state" class="game-state" data-url="<%= temporary_state_games_path %>">
    <%= render partial: 'games/state', locals: {game: @game} %>
  </div>
  <%= render partial: 'games/controls', locals: {game: @game, image: @image} %>
  <div class="auth-controls has-text-centered">
    <div class="content">
      <p>Sign in to have multiple games in progress and see win/loss stats.</p>
    </div>
    <%= link_to "Log in", new_user_session_path %> &middot;
    <%= link_to "Sign up", new_user_registration_path %>
  </div>
</div>
